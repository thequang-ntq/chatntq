<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chatntq.APP.Components.Button.ButtonComp">
    <Button
        x:Name="ButtonComponent"
        Text="{Binding Text, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
        BackgroundColor="{Binding BackgroundColor, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
        TextColor="White"
        FontFamily="Pacifico-Regular.ttf"
        BorderColor="{Binding BorderColor, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
        CornerRadius="10"
        Padding="10"
        IsEnabled="True"
        IsVisible="{Binding IsVisible, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
        Pressed="ButtonComponent_Pressed"
        Released="ButtonComponent_Released"
        Clicked="ButtonComponent_Clicked"
        VerticalOptions="Center"
        HorizontalOptions="{Binding HorizontalOptions, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
        Command="{Binding Command, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
        CommandParameter="{Binding CommandParameter, Source={RelativeSource AncestorType={x:Type local:ButtonComp}}}"
    />
</ContentView>
